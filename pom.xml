<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>net.fortytwo.extendo</groupId>
    <artifactId>extendo-parent</artifactId>
    <version>1.2-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Extendo</name>
    <description>Extendo Project</description>

    <modules>
        <module>extendo-core</module>
        <module>flashcards</module>
        <module>extendo-brain</module>
        <module>extendo-events</module>
        <module>extendo-opencalais</module>
        <module>extendo-qrcodes</module>
        <module>extendo-rfid</module>
        <module>extendo-speech</module>
    </modules>

    <properties>
        <extendo.version>1.2-SNAPSHOT</extendo.version>
        <tinkerpop.version>2.3.0-SNAPSHOT</tinkerpop.version>
        <neo4j.version>1.9.M03</neo4j.version>
        <rdfagents.version>1.0-SNAPSHOT</rdfagents.version>
        <ripple.version>0.8-SNAPSHOT</ripple.version>
        <sesame.version>2.6.10</sesame.version>
        <junit.version>4.5</junit.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <directory>${basedir}/target</directory>
    </build>

    <repositories>
        <repository>
            <id>fortytwo</id>
            <name>fortytwo.net Maven repository</name>
            <url>http://fortytwo.net/maven2</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>fortytwo</id>
            <name>fortytwo.net Maven repository</name>
            <url>file:///mnt/repository</url>
        </repository>
    </distributionManagement>

</project>
