<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>net.fortytwo.myotherbrain</groupId>
    <artifactId>myotherbrain-all</artifactId>
    <version>1.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>MyOtherBrain</name>
    <description>This is your brain. This is your brain on the Web. Any questions?</description>

    <modules>
        <module>core</module>
        <module>flashcards</module>
        <module>tinkernotes</module>
        <module>android</module>
        <module>extensions</module>
    </modules>

    <properties>
        <myotherbrain.version>1.1-SNAPSHOT</myotherbrain.version>
        <tinkerpop.version>2.1.0</tinkerpop.version>
        <rdfagents.version>0.2</rdfagents.version>
        <ripple.version>0.8-SNAPSHOT</ripple.version>
        <sesame.version>2.6.4</sesame.version>
        <sesametools.version>1.6</sesametools.version>
        <junit.version>4.5</junit.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <directory>${basedir}/target</directory>
    </build>

    <repositories>
        <repository>
            <id>fortytwo</id>
            <name>fortytwo.net Maven repository</name>
            <url>http://fortytwo.net/maven2</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>fortytwo</id>
            <name>fortytwo.net Maven repository</name>
            <url>file:///mnt/repository</url>
        </repository>
    </distributionManagement>

</project>
